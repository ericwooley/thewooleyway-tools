  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "terminous http",
      "cwd": "${workspaceRoot}/packages/terminus-maximus/",
      "program": "${workspaceRoot}/packages/terminus-maximus/bin/terminal.js",
      "args": [
        "http"
      ]
    },
    {
      "type": "node",
      "request": "launch",
      "name": "terminous ping",
      "cwd": "${workspaceRoot}/packages/terminus-maximus/",
      "program": "${workspaceRoot}/packages/terminus-maximus/bin/terminal.js",
      "args": [
        "ping"
      ]
    },
    {
      "type": "node",
      "request": "attach",
      "name": "Attach",
      "port": 5858
    },
    {
      "type": "node",
      "runtimeExecutable": "${workspaceRoot}/node_modules/.bin/babel-node",
      "request": "launch",
      "name": "Launch Program",
      "program": "${file}"
    }
  ]
}
